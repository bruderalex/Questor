@model SearchResultVm

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 display-2">Questor Project</h1>

    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
    {
        <div class="row" style="min-width: 77em">
            <div class="input-group">
                <input class="form-control input-lg border-right-0 border" placeholder="Search..." id="search-input" name="question">
                <span class="input-group-append">
                    <button class="btn-primary btn btn-outline-secondary border-left-0 border" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </div>
        <p/>
    }

    <div class="d-block">
        @if (Model != null)
        {
            @foreach (var item in Model.SearchResultItems)
            {
                <div class="card card-solid">
                    <div class="card-body text-left">
                        <h5 class="card-title">
                            <span class="font-weight-bold">@item.Title</span>
                        </h5>
                        <a href="@item.Url" class="card-link">@item.Url</a>
                        <p class="card-text">@item.Content</p>
                    </div>
                </div>
                <p/>
            }
        }
    </div>
</div>